
<% if @job.errors.any? %>
<h3>The following errors prevented the new Job post from getting created!</h3>
 <ul style="list-style-type:circle">
     <% @job.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
     <% end %>
 </ul>
<% end %>


<div class ='row'>
  <div class='col-md-12'>
   <%= form_for(@job, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
     <div class="control-label col-sm-2">
      <%= f.label :title %>
      </div>
      <div class="col-sm-8">
      <%= f.text_field :title, class:"form-control", placeholder:"Title of Job", autofocus: true %>
   </div>
 </div>
  <div class="form-group">
     <div class="control-label col-sm-2">
     <%= f.label :description %>
     </div>
     <div class="col-sm-8">
     <%= f.text_area :description, rows:10, class:"form-control", placeholder:"Job description" %>
     </div>
    </div>
    <div class="form-group">
     <div class="col-sm-offset-2 col-sm-10">
       <%= f.submit class:'btn btn-primary btn-lg' %>
       </div>
       </div>
<% end %>
<div class="col-xs-4 col-xs-offset-4">
 [<%= link_to 'Back to Jobs lists', jobs_path %>]
</div>
</div>
</div>